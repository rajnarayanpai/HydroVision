<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sensor_readings_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".sensor_readings">

    <!-- Screen Title -->
    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/title_gradient_bg"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:letterSpacing="0.08"
        android:paddingHorizontal="24dp"
        android:paddingVertical="8dp"
        android:shadowColor="#2979FF"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="12"
        android:text="Sensor Readings"
        android:textColor="#1D1D1D"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Cards Container -->
    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/grid_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="-5dp"
        android:layout_marginBottom="5dp"
        android:padding="16dp"
        app:alignmentMode="alignMargins"
        app:columnCount="2"
        app:layout_constraintBottom_toTopOf="@+id/btn_get_recommendations"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_title"
        app:rowCount="3"
        app:rowOrderPreserved="false">

        <!-- pH -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_ph"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_margin="12dp"
            android:backgroundTint="@color/card_background"
            android:clickable="false"
            android:shadowColor="@color/primary_accent"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="8"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:layout_columnWeight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Label Above -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:shadowColor="@color/primary_accent"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="8"
                    android:text="pH Level"
                    android:textColor="@color/primary_accent"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_ph"
                    app:tint="#00B0FF" />

                <TextView
                    android:id="@+id/text_ph_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="--"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Turbidity -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_turbidity"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_margin="12dp"
            android:backgroundTint="@color/card_background"
            android:clickable="false"
            android:shadowColor="@color/primary_accent"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="8"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:layout_columnWeight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:shadowColor="@color/primary_accent"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="8"
                    android:text="Turbidity (NTU)"
                    android:textColor="@color/primary_accent"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_turbidity"
                    app:tint="#FFEA00" />

                <TextView
                    android:id="@+id/text_turbidity_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="--"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- TDS -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_tds"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_margin="12dp"
            android:backgroundTint="@color/card_background"
            android:clickable="false"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:layout_columnWeight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:shadowColor="@color/primary_accent"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="8"
                    android:text="TDS (ppm)"
                    android:textColor="@color/primary_accent"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_tds"
                    app:tint="#F8F2F2" />

                <TextView
                    android:id="@+id/text_tds_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="--"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Bacterial Contamination -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_bacterial"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_margin="12dp"
            android:backgroundTint="@color/card_background"
            android:clickable="false"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:layout_columnWeight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:shadowColor="@color/primary_accent"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="8"
                    android:text="Impedance"
                    android:textColor="@color/primary_accent"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_bacteria"
                    app:tint="#3D5AFE" />

                <TextView
                    android:id="@+id/text_bacterial_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="--"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Temperature -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_temperature"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_margin="12dp"
            android:backgroundTint="@color/card_background"
            android:clickable="false"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:layout_columnWeight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:shadowColor="@color/primary_accent"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="8"
                    android:text="Temperature (°C)"
                    android:textColor="@color/primary_accent"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_temperature"
                    app:tint="#FF1744" />

                <TextView
                    android:id="@+id/text_temperature_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="--"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- EC Value -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_ec"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_margin="12dp"
            android:backgroundTint="@color/card_background"
            android:clickable="false"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:layout_columnWeight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:shadowColor="@color/primary_accent"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="8"
                    android:text="EC Value (µS/cm)"
                    android:textColor="@color/primary_accent"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_ec"
                    app:tint="#D500F9" />

                <TextView
                    android:id="@+id/text_ec_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:shadowColor="@color/primary_accent"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="8"
                    android:text="--"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.gridlayout.widget.GridLayout>

    <!-- Get Recommendations Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_get_recommendations"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="14dp"

        android:fontFamily="@font/montserrat_bold"
        android:letterSpacing="0.05"
        android:shadowColor="@color/primary_accent"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="15"
        android:text="Recommendations"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:textStyle="bold"

        app:backgroundTint="#00DDAF"
        app:cornerRadius="30dp"
        app:icon="@drawable/ic_arrow_forward"
        app:iconGravity="start"
        app:iconPadding="12dp"
        app:iconSize="24dp"

        app:iconTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="@color/primary_accent" />

</androidx.constraintlayout.widget.ConstraintLayout>
